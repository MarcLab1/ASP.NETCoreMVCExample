@{
    ViewData["Title"] = "Forms and Buttons";
}

@model IEnumerable<Student>

@section titleBox{

    <h3>This is the titleBox layout section of the FormsAndButtons2/Index.html page</h3>
}

@if (Model.Count() == 0)
{
    <form method="post">
        <p>
            <label>id:</label>
            <input type="text" id="id" name="id" />
           
        </p>
        <p>
            <label>fName:</label>
            <input type="text" id="fName" name="fName" />
        </p>
        <p>
            <label>lName:</label>
            <input type="text" id="lName" name="lName" />
        </p>

        <p><button type="submit" asp-action="RegisterStudent">Submit</button></p>
    </form>

}
else
{
    <table style="width:50%">
        <thead>
            <tr>
                <th>id</th>
                <th>first name</th>
                <th>last name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Student s in Model)
            {
                <tr>
                    <td>@s.id</td>
                    <td>@s.fName</td>
                    <td>@s.lName</td>
                </tr>
            }
        </tbody>
    </table>
}

@{var price = 25;}
@if (price > 30)
{
    <p>The price is too high.</p>
}
else
{
    <p>The price is OK.</p>
}

